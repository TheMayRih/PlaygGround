	<script>
	alert("OBJECTIVE IS SIMPLE CATCH THE ORANGE BOX ..HAVE FUN!")
 var obstacle = document.getElementById("obstacle");
window.addEventListener("click",start)
function start(){
window.setInterval(function(){  obstacle.style.top=Math.floor(Math.random()*399) + "px"; obstacle.style.left=Math.floor(Math.random()*399) + "px";},300) 
window.removeEventListener("click",start)
obstacle.addEventListener ("click",end)
function end(){
	alert("WOHOOO WE HAVE OURSELVES A WINNER!!..AND YOUR PRIZE IS DRUM ROOOOOLSSSSS NNNNNOTHING! ")
	alert ("Feel free to increase the difficulty O'The Almighty One!'")
}
};


